<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PostsListFragment">

    <TextView
        android:id="@+id/frag_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/button_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_textview"
        />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        style="?android:attr/buttonBarNeutralButtonStyle"
        android:weightSum="3"
        >

    <Button
        android:id="@+id/filter1_button"
        android:layout_height="wrap_content"
        android:text="@string/filter1_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        style="?android:attr/buttonBarButtonStyle"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/filter2_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/filter2_button"
        android:layout_weight="1"
        style="?android:attr/buttonBarButtonStyle"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/filter3_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/filter3_button"
        android:layout_weight="1"
        style="?android:attr/buttonBarButtonStyle"
        tools:ignore="ButtonStyle" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>